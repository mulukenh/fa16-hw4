<form action="/students" method="post">
	<label>Student's name</label>
	<input name="name" placeholder=<%=@name_place_holder%> type="text"></input>
	<label>ID number</label>
	<input name="id" placeholder=<%=@id_place_holder%> type="text"></input>
	<label>Major</label>
	<input name="text" placeholder=<%=@major_place_holder%> type="text"></input>
	  

  	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  	<button type="submit">Submit</button>
</form>

